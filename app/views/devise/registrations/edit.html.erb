<h2>個人情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :last_name, '名字' %><br />
    <%= f.text_field :last_name, placeholder: "例）山田", required: true %>
  </div>

  <div class="field">
    <%= f.label :first_name, '名前' %><br />
    <%= f.text_field :first_name, placeholder: "例）太郎", required: true %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, '名字(カナ)' %><br />
    <%= f.text_field :last_name_kana, placeholder: "例）ヤマダ", required: true %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, '名前(カナ)' %><br />
    <%= f.text_field :first_name_kana, placeholder: "例）タロウ", required: true %>
  </div>

  <div class="field">
    <%= f.label :phone_number, '電話番号' %><br />
    <%= f.text_field :phone_number, placeholder: "例）09012345678", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "変更する" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
