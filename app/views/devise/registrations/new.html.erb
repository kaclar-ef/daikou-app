<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <em>英数字混合6文字以上</em><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード（確認用）'%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :last_name, '名字' %><br />
    <%= f.text_field :last_name, placeholder: "例）山田" %>
  </div>

  <div class="field">
    <%= f.label :first_name, '名前' %><br />
    <%= f.text_field :first_name, placeholder: "例）太郎" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, '名字(カナ)' %><br />
    <%= f.text_field :last_name_kana, placeholder: "例）ヤマダ" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, '名前(カナ)' %><br />
    <%= f.text_field :first_name_kana, placeholder: "例）タロウ" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, '電話番号' %><br />
    <%= f.text_field :phone_number, placeholder: "例）09012345678" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
